<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/prompt_help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:text="What do you think this drawing is?" />

    <ImageView
        android:id="@+id/image_received_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Received image" />


    <EditText
        android:id="@+id/user_prompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Guess"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/button_send_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Guess!" />


</LinearLayout>